{
  "name": "tweaksophia",
  "version": "1.1.0",
  "description": "An Tweak for Sophia",
  "main": "index.js",
  "build": {
    "productName": "TweakSophia",
    "appId": "br.com.geovanems.tweaksophia",
    "win": {
      "icon": "icons/app.ico"
    },
    "mac":{
      "category":"public.app-category.utilities",
      "icon": "icons/app.icns"
    },
    "nsis": {
      "license": "LICENSE",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "installerIcon": "icons/app.ico",
      "uninstallerIcon": "icons/app.ico"
    },
    "linux": {
      "icon": "icons/256x256.png",
      "category": "Utility",
      "desktop":{
        "Name":"Tweak Sophia",
        "Icon":"tweak-sophia",
        "Type":"Application",
        "Categories":"Utility;"
      },
      "executableName":"tweak-sophia"  
    }
    
  },
  "scripts": {
    "prepare": "$(npm bin)/node-sass sass -o interface/assets",
    "start": "electron ."
  },
  "author": "GeovaneSchmitz <contato@geovanems.com.br>",
  "repository": {
    "type": "git",
    "url": "https://github.com/GeovaneSchmitz/tweakSophia.git"
  },
  "license": "SEE LICENSE FILE",
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.38.5",
    "node-sass": "^4.11.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "uuid": "^3.3.2"
  }
}
